#include <stdio.h>

int main()
{
    int sum=0;
    int i,n;
   float avg;
   printf("input the 10 numbers : ");
   for(i=1;i<=10;i++) 
   {
      printf("\nnumber :%d",i);
        //scanf("%d",&n);
        sum+=i;
    }
    avg = sum/10.0;
    
    printf("\nsum= %d",sum);
    printf("\naverage= %f ",avg);

    return 0;
}
