#include <stdio.h>

int main()
{
    char c;
    int a;
    printf("enter a character: ");
    scanf("%c",&c);
    switch(c){
        case 'a':
        case 'A':
        printf("A is vowel"); break;
        case 'e':
        case 'E':
        printf("E is vowel");break;
        case 'i':
        case 'I':
        printf("I is vowel");break;
        case 'o':
        case 'O':
        printf("O is vowel");break;
        case 'u':
        case 'U':
        printf("U is vowel");break;
        default :
        printf("This character is not a vowel!");
    }

    return 0;
}
