#include <stdio.h>

int main()
{
    char ch;
    int a,b;
    
    printf("\n enter operator(+-*/): ");
    scanf("%c",&ch);
    printf("enter two numbers: ");
    scanf("%d%d",&a,&b);
    switch(ch){
        case'+':
        printf("%d+%d=%d",a,b,a+b);
        break;
        case '-':
        printf("%d-%d=%d",a,b,a-b);
        break;
        case '*':
        printf("%d*%d=%d",a,b,a*b);
        break;
        case '/':
        printf("%d/%d=%d",a,b,a/b);
        break;
        default:
        printf("enter correct numbers or operators.");
        break;
    }

    return 0;
}
